<UserControl x:Class="PointOfSale.OrderItemText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <StackPanel Orientation="Vertical">
        <TextBlock Name="orderName" Text="{Binding Path=ToString}"/>
        <TextBlock Name="orderPrice" Text="{Binding Path=Price}"/>
        <TextBlock Name="orderInstructions" Text="{Binding Path=SpecialInstructions}"/>
    </StackPanel>
</UserControl>
